<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<manifest xmlns="http://tizen.org/ns/packages" api-version="2.3.1" package="org.example.sleep_assistant_gear" version="1.0.0">
    <profile name="wearable"/>
    <ui-application appid="org.example.sleep_assistant_gear" exec="sleep_assistant_gear" multiple="false" nodisplay="false" taskmanage="true" type="capp">
        <label>Sleep Assistant</label>
        <icon>icon.png</icon>
